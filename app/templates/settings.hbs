<div class="page-header">
  <h1><i class="bi bi-gear-fill"></i> Settings</h1>
</div>
<h2>Meeting Dates</h2>
<form>
  <div class="mb-3">
    <label for="midweek-meeting">Midweek meeting is on</label>
    <select class="form-select" id="midweek-meeting" onchange={{action "changeMidweekMeeting" value="target.value"}}>
      {{#each weekdays as |day index|}}
        <option value="{{index}}" selected="{{if (eq model.midweekMeeting index) 'selected'}}">{{day}}</option>
      {{/each}}
    </select>
  </div>

  <div class="mb-3">
    <label for="weekend-meeting">Weekend meeting is on</label>
    <select class="form-select" id="weekend-meeting" onchange={{action "changeWeekendMeeting" value="target.value"}}>
      {{#each weekdays as |day index|}}
        <option value="{{index}}" selected="{{if (eq model.weekendMeeting index) 'selected'}}">{{day}}</option>
      {{/each}}
    </select>
  </div>

  <div class="mb-3">
    <button {{action "save"}} type="submit" class="btn btn-primary">Save</button>
    <button {{action "cancel"}} type="button" class="btn btn-link">Cancel</button>
  </div>
</form>

{{outlet}}
