<div class="page-header">
  <h1>
    <i class="bi bi-people-fill"></i> People
    <LinkTo @route="people.edit" @model="new" class="btn btn-primary float-end">Add Person</LinkTo>
  </h1>
</div>

{{#if model}}
<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Groups</th>
        <th>Assignment Frequency</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |person|}}
      {{#link-to "people.edit" person tagName="tr"}}
        <td>{{person.name}}</td>
        <td><a href="mailto:{{person.email}}">{{person.email}}</a></td>
        <td>
          {{#each person.groupsSorted as |group|}}
            <span class="badge bg-secondary">{{group.name}}</span>
          {{/each}}
        </td>
        <td>{{person.assignmentFrequencyPrintable}}</td>
        <td class="text-right"><a {{action "delete" person}} class="bi bi-trash"></a></td>
      {{/link-to}}
    {{/each}}
    </tbody>
</table>
{{/if}}

{{outlet}}
