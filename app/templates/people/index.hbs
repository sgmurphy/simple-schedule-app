<div class="page-header">
  <h1>
    <span class="glyphicon glyphicon-user" aria-hidden="true"></span> People
    {{#link-to "people.edit" "new" class="btn btn-primary pull-right"}}Add Person{{/link-to}}
  </h1>
</div>

{{#if model}}
<table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Groups</th>
        <th>Assignment Frequency</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |person|}}
      {{#link-to "people.edit" person tagName="tr"}}
        <td>{{person.name}}</td>
        <td><a href="mailto:{{person.email}}">{{person.email}}</a></td>
        <td>
          {{#each person.groupsSorted as |group|}}
            <span class="label label-default">{{group.name}}</span>
          {{/each}}
        </td>
        <td>{{person.assignmentFrequencyPrintable}}</td>
        <td class="text-right"><a {{action "delete" person}} class="glyphicon glyphicon-trash" aria-hidden="true"></a></td>
      {{/link-to}}
    {{/each}}
    </tbody>
</table>
{{/if}}

{{outlet}}
